<h1>List of venues</h1>

<form action="/insert_venue_record">
  <label for="venue_box">Address</label>
  <input id="venue_box" type="text" name="query_address" placeholder="Enter an address...">
  
  <label for="name_box">Name</label>
  <input id="name_box" type="text" name="query_name" placeholder="Enter a name...">
  
  <label for="neighborhood_box">Neighborhood</label>
  <input id="neighborhood_box" type="text" name="query_neighborhood" placeholder="Enter a neighborhood...">

  <button>Add venue</button>
</form>

<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Address
    </th>

    <th>
      Name
    </th>

    <th>
      Neighborhood
    </th>

    <th></th>
  </tr>

  <% @list_of_venues.each do |a_venue| %>
  <tr>
    <td>
      <%= a_venue.id %>
    </td>
    <td>
      <%= a_venue.address %>
    </td>
   
    <td>
      <%= a_venue.name %>
    </td>
   
    <td>
      <%= a_venue.neighborhood %>
    </td>

    <td>
      <a href="/venues/<%= a_venue.id %>">Show details</a>
    </td>
  </tr>
  
  <% end %>
</table>
